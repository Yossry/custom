<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="customer_invoices_tmpl">
            <t t-call="web.html_container">
                <h1 style="text-align:center">موسسة النحام للتجارة</h1>
                <p style="text-align:center">ربحية الاصناف الفعلية. كود تحليلي بالفوز</p>
                <hr style="width:60%"/>
                <div style="direction:ltr;width:100%;text-align:right">
                    <div style="float:right;width:48%">
                        <p>
                            تاريخ من:<t t-esc="data['form']['date_from']"/>
                        </p>
                    </div>
                    <div style="float:right;width:48%">
                        <p>
                             تاريخ الي:<t t-esc="data['form']['date_to']"/>
                        </p>
                    </div>

                    <div style="float:right;width:48%">
                        <p>
                            العميل:<t t-esc="data['form']['partner_id'][1]"/>
                        </p>
                    </div>
                    <div style="float:right;width:48%">
                        <p>
                            البائع:<t t-esc="data['form']['salesman_id'][1]"/>
                        </p>
                    </div>
                </div>
                <table style="direction:rtl;width:90%;margin:auto;border:1px solid;">
                    <thead>
                        <tr>
                            <th style="border:1px solid;">فئة</th>
                            <th style="border:1px solid;">رقم الصنف</th>
                            <th style="border:1px solid;">اسم الصنف</th>
                            <th style="border:1px solid;">الوحدة</th>
                            <th style="border:1px solid;">الكمية</th>
                            <th style="border:1px solid;">قيمة البيع</th>
                            <th style="border:1px solid;">التكلفة</th>
                            <th style="border:1px solid;">الربح</th>
                            <th style="border:1px solid;">%</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="invoices" t-as="line">
                            <tr >
                                <td style="border:1px solid;"><t t-esc="line.product_id.categ_id.name"/></td>
                                <td style="border:1px solid;"><t t-esc="line.product_id.categ_id.default_code"/></td>
                                <td style="border:1px solid;"><t t-esc="line.product_id.name"/></td>
                                <td style="border:1px solid;"><t t-esc="line.product_uom_id"/></td>
                                <td style="border:1px solid;"><t t-esc="line.quantity"/></td>
                                <td style="border:1px solid;"><t t-esc="line.price_unit"/></td>
                                <td style="border:1px solid;"><t t-esc="line.price_unit"/></td>
                                <td style="border:1px solid;"><t t-esc="line.price_unit - line.price_unit"/></td>
                                <td style="border:1px solid;"><t t-esc="(line.price_unit - line.price_unit) / line.price_unit * 100"/></td>
                            </tr>
                        </t>
                    </tbody>

                </table>
            </t>
        </template>

    </data>
</odoo>
